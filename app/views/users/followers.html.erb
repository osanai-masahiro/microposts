<h1>Follower users</h1>
<div class = "container">
<% @follower.each do |follow| %>
            <div class="row">
                  <aside class="col-md-4">
                    <section class="user_info">
                          <h1>
        
                                <%= gravatar_for follow %>
                               名前: <%= follow.name %>
                                </br>
                               メールアドレス:<%= follow.email %>
                                </br>
                               出身地: <%= follow.area %>
                                </br>
                                <%= link_to "Show profile", follow %>

                          </h1>
                    </section>
                   </aside>
            </div>
<% end %>
</div>